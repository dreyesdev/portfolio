---
const { title, description, stack = [], links = [] } = Astro.props;
---

<article class="rounded-3xl border border-slate-200 bg-white p-6 shadow-sm hover:shadow-md transition-shadow">
  <h3 class="text-lg font-semibold tracking-tight">{title}</h3>
  <p class="mt-2 text-sm text-slate-600">{description}</p>

  {stack?.length > 0 && (
    <div class="mt-4 flex flex-wrap gap-2 text-xs text-slate-700">
      {stack.map((t) => <span class="rounded-full bg-slate-100 px-3 py-1">{t}</span>)}
    </div>
  )}

  {links?.length > 0 && (
    <div class="mt-5 flex flex-wrap gap-3">
      {links.map((l) => (
        <a
          class="inline-flex items-center justify-center rounded-xl border border-slate-300 px-4 py-2 text-sm font-medium text-slate-800 hover:bg-slate-50"
          href={l.href}
          target="_blank"
          rel="noopener"
        >
          {l.label}
        </a>
      ))}
    </div>
  )}
</article>
