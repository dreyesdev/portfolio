---
const { title = "David Reyes | .NET Backend Engineer", description = "Senior Software Engineer (.NET Backend) focused on data-heavy systems, automation, and APIs." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>

  <body class="bg-white text-slate-900 antialiased">
    <div class="min-h-screen">
      <slot />
    </div>
  </body>
</html>
